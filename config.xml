        <icon height="87" src="resources/ios/icon/icon-small@3x.png" width="87" />
        <icon height="1024" src="resources/ios/icon/icon-1024.png" width="1024" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^1.1.16" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
    <plugin name="cordova-sqlite-storage" spec="^2.3.1" />
    <plugin name="cordova-plugin-appcenter-analytics" spec="^0.1.4" />
    <plugin name="cordova-plugin-appcenter-crashes" spec="^0.1.4" />
    <plugin name="cordova-plugin-appcenter-push" spec="^0.1.4" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <plugin name="cordova-plugin-play-games-services" spec="^1.1.0">
        <variable name="APP_ID" value="831588394839" />
    </plugin>
    <allow-navigation href="*" />
    <plugin name="cordova-plugin-firebase" spec="^1.0.3" />
    <engine name="android" spec="7.1.1" />
    <plugin name="cordova-plugin-app-version" spec="~0.1.9" />
</widget>
